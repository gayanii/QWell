<UserControl x:Class="QWellApp.UserControls.OptionsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QWellApp.UserControls" xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="optionsUserControl">

    <StackPanel Orientation="Horizontal">
        <Button Style="{StaticResource buttonReg}">
            <fa:ImageAwesome Icon="{Binding Path=Icon,ElementName=optionsUserControl}" Width="15" Height="15" Foreground="White"/>
        </Button>

        <TextBlock Text="{Binding Path=Text,ElementName=optionsUserControl}" Foreground="#363636" VerticalAlignment="Center" Margin="10 0 20 0" FontWeight="SemiBold"/>
    </StackPanel>
</UserControl>
